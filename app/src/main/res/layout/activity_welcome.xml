<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Views.Activity.WelcomeActivity">

    <TextView
        android:id="@+id/txt_name_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Bienvenido Arian"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_rooms"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/computer"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/txt_name_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/btn_rooms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="Logout" />
</RelativeLayout>